COMPILER_DIR = 
COMPILER_PREFIX = gcc
LINKER_PREFIX = ld

ASFLAGS32 = --32 -march=i386
ASFLAGS64 = --64 -march=i386

NASMFLAGS64 = -f elf64

CFLAGS32 = -m32
CFLAGS64 = -m64

LDFLAGS32 = -melf_i386
LDFLAGS64 = -melf_x86_64

DEFS32 = -DX86

ASFLAGS = $(ASFLAGS64)
NASMFLAGS_ARCH =$(NASMFLAGS64)
CFLAGS_ARCH  = $(CFLAGS64)
LDFLAGS_ARCH = $(LDFLAGS64)
DEFS_ARCH    = $(DEFS64)

